<h1> Post Index </h1>

<table class= "table">
  
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tital</th>
      <th scope="col">post_field</th>
      <th scope="col"></th>

    </tr>
  </thead>
  <tbody>
     <%@posts.each do |post| %>
      <tr>
        <td><%= post.id%></td>
        <td><%= post.tital%></td>
        <td><%= post.post_field%></td>
        <td><%= link_to "show data", post_path(post.id), class: "btn btn-primary"%></td>
    
      </tr>
    <%end%>
    
  </tbody>
     
</table>

